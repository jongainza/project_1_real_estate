{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "info": {
      "type": "string"
    },
    "street": {
      "type": "string"
    },
    "number": {
      "type": "integer"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "zip_code": {
      "type": "integer"
    },
    "price": {
      "type": "integer"
    },

    "bedrooms": {
      "type": "integer"
    },
    "bathrooms": {
      "type": "integer"
    },
    "garage": {
      "type": "boolean"
    },
    "images": {
      "type": ["array", "string"],
      "items": {
        "anyOf": [{ "type": "string" }, { "type": "object" }]
      }
    }
  },
  "required": [
    "title",
    "info",
    "street",
    "number",
    "city",
    "state",
    "country",
    "zip_code",
    "price",
    "bedrooms",
    "bathrooms",
    "garage",
    "images"
  ]
}
